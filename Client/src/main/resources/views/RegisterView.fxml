         <children>
            <ImageView fitHeight="128.0" fitWidth="136.0" layoutX="46.0" layoutY="130.0" pickOnBounds="true"
                       preserveRatio="true">
               <image>
                  <Image url="@../images/chat-circle-blue-512.png"/>
               </image>
            </ImageView>
         </children>
      </Pane>
   </left>
   <center>
      <VBox alignment="TOP_CENTER" spacing="20.0">
         <children>
            <JFXTextField fx:id="phoneNoTf" prefHeight="25.0" prefWidth="251.0" promptText="phoneNo"/>
            <JFXTextField fx:id="birthDateTf" prefHeight="25.0" prefWidth="169.0" promptText="birthDate"/>
            <JFXTextField fx:id="usernameTf" prefHeight="25.0" prefWidth="251.0" promptText="userName"/>
            <JFXTextField fx:id="passwordTf" prefHeight="25.0" prefWidth="251.0" promptText="Password" text="password"/>
