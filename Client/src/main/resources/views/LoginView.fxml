                     <opaqueInsets>
                        <Insets/>
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="25.0"/>
                     </HBox.margin>
                  </JFXCheckBox>
                  <Region prefHeight="38.0" prefWidth="206.0"/>
                  <JFXButton fx:id="signInBtn" buttonType="RAISED" maxHeight="1.7976931348623157E308"
                             maxWidth="1.7976931348623157E308" onAction="#handleSignInBtn" prefHeight="37.0"
                             prefWidth="125.0" style="-fx-background-color: #00334E;" text="Sign in " textFill="WHITE">
                     <HBox.margin>
                        <Insets right="25.0"/>
                     </HBox.margin>
                     <opaqueInsets>
                        <Insets/>
                     </opaqueInsets>
                  </JFXButton>
               </children>
            </HBox>
            <Region prefHeight="200.0" prefWidth="200.0"/>
            <Label fx:id="errorLbl" textFill="#a82525">
               <font>
                  <Font size="14.0"/>
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0"/>
            <JFXButton fx:id="signUpBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       onAction="#handleSignUpBtn" style="-fx-background-color: #5588A3;"
                       text="Don't Have Account Sign Up " textFill="WHITE">
               <VBox.margin>
                  <Insets left="40.0" right="20.0" top="30.0"/>
               </VBox.margin>
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
               <font>
                  <Font size="13.0"/>
               </font>
            </JFXButton>
         </children>
      </VBox>
   </center>
