<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.HTMLEditor?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="eg.gov.iti.jets.controllers.SingleChatViewController">
    <center>
        <ListView fx:id="singleChatMessagesLv" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <VBox alignment="TOP_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <JFXButton onAction="#handleSendBtn" style="-fx-background-color: lightblue;" text="Send"/>
                <HTMLEditor fx:id="singleChatMessageHtml"
                            htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;"
                            prefHeight="200.0" prefWidth="506.0"/>
         </children>
      </VBox>
   </bottom>
</BorderPane>
