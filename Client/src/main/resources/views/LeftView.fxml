<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="275.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="eg.gov.iti.jets.views.LeftViewController">
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" tabMinHeight="30.0"
                 tabMinWidth="70.0">
            <tabs>
                <Tab fx:id="contactsTab" text="Contacts">
                    <content>
                        <Accordion fx:id="groupsAccordion">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </Accordion>
                    </content>
                </Tab>
                <Tab fx:id="groupChatTab" text="Groups">
                    <content>
                        <ListView fx:id="groupChatsLv">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </ListView>
                    </content>
                </Tab>
                <Tab fx:id="singleChatTab" text="Chats">
                    <content>
                        <ListView fx:id="singleChatsLv">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </ListView>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
